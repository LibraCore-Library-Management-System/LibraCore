@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Book</h2>

    <div class="alert alert-danger text-center">
        <strong>Warning!</strong> Are you sure you want to delete this book?
    </div>

    <div class="card mb-4">
        <div class="card-body text-center">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text"><strong>Author:</strong> @Model.Author</p>
        </div>
    </div>

    <form asp-route-id="@Model.BookId" asp-action="DeleteConfirmed" class="text-center">
        <button type="submit" class="btn btn-danger btn-lg me-3">Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>
